{
  "buildCommand": "cd client && npm install && npm run build",
  "outputDirectory": "client/build",
  "framework": "create-react-app",
  "rewrites": [
    { "source": "/api/(.*)", "destination": "https://your-render-api-url.onrender.com/api/$1" },
    { "source": "/(.*)", "destination": "/index.html" }
  ]
}